{
  "// Purpose": "KANNA project-specific VS Code settings for French academic writing",
  "// Created": "2025-10-10",
  "// Grammalecte Configuration": "French grammar checking for thesis chapters",

  "grammalecte.python.command": "python3",
  "grammalecte.config.folder": "${workspaceFolder}/.vscode/grammalecte",
  "grammalecte.language": "fr",

  "// File Associations": "Ensure Grammalecte works with thesis files",
  "files.associations": {
    "*.md": "markdown",
    "*.tex": "latex"
  },

  "// Editor Settings": "Optimized for academic writing",
  "editor.formatOnSave": false,
  "editor.wordWrap": "on",
  "editor.rulers": [80, 100],
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,

  "// LaTeX Settings": "For thesis chapters in Overleaf sync",
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.view.pdf.viewer": "tab",

  "// Git Settings": "Exclude large files",
  "files.exclude": {
    "**/*.aux": true,
    "**/*.log": true,
    "**/*.synctex.gz": true,
    "**/*.toc": true,
    "**/*.out": true
  },

  "// Search Settings": "Useful patterns for thesis work",
  "search.exclude": {
    "**/literature/pdfs/**": true,
    "**/data/**": true,
    "**/.git": true
  },

  "// Markdown Settings": "For literature notes and documentation",
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,

  "// Python Settings": "For analysis scripts",
  "python.defaultInterpreterPath": "${env:HOME}/.conda/envs/kanna/bin/python",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  "// R Settings": "For statistics and GIS",
  "r.rterm.linux": "${env:HOME}/.conda/envs/r-gis/bin/R",
  "r.rpath.linux": "${env:HOME}/.conda/envs/r-gis/bin/R",

  "// KANNA-specific": "Custom dictionary path",
  "cSpell.userWords": [
    "mesembrine",
    "mesembrenone",
    "tortuosamine",
    "Sceletium",
    "tortuosum",
    "ethnopharmacologie",
    "phytochimie",
    "Khoisan",
    "anxiolytique",
    "alcalo√Ødes"
  ]
}
